@{
    ViewData["Title"] = "Home Page";
}
@model auctions.Models.RegisterViewModel

@foreach (var error in @ViewBag.Errors)
{
    <p>@error</p>
}
<div class='col-md-4'>
    <h3>Login</h3>
    <form asp-controller="Home" asp-action="Login" method='post'class="form-inline">
        <div>
            <label for='UserName'>UserName </label><br> 
            <input type='text' name="UserName" class="form-control">
        </div>
        <div>
            <label for='PasswordToCheck'>Password </label><br> 
            <input type='password' name="PasswordToCheck"class="form-control">
        </div>
        <br>
        <button class="btn btn-primary btn-sm" type='submit'>Login</button>
    </form>
</div>

<div class="col-md-4">
    <h3>Register</h3>
    <form asp-controller="Home" asp-action="HandleRegister" method='post'class="form-inline">
        <div>
            <label asp-for="UserName">User Name</label><br> 
            <input asp-for="UserName" class="form-control"/>
            <span asp-validation-for="UserName"></span>
        </div>
        <div>
            <label asp-for="FirstName">First Name </label><br> 
            <input asp-for="FirstName" class="form-control"/>
            <span asp-validation-for="LastName"></span>
        </div>
        <div>
            <label asp-for="LastName">Last Name </label><br> 
            <input asp-for="LastName" class="form-control"/>
            <span asp-validation-for="LastName"></span>
        </div>
        <div>
            <label asp-for="Password">Password</label><br> 
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="PasswordConfirmation">Password Confirmation</label><br> 
            <input asp-for="PasswordConfirmation" type='password' class="form-control">
            <span asp-validation-for="PasswordConfirmation"></span>
        </div>
        <br>
        <button class="btn btn-primary " type='submit'>Create a User</button>
    </form>
</div>

